                <li class="mx-5 text-xl"><%= result.name%></li>
                </div>
                <hr />
            </form>
          
            <% }) %>
          <div class="flex">
            <form class="flex" action="/" method="post">
            <div class="mx-10 p-4"><input type="text" name="item" placeholder="New Item" /></div>
            <div class="m-2" type="button">
                <button type="submit" class="h-10 w-10 rounded-full bg-blue-500 text-white hover:bg-red-500" name="list1" value="<%=kindOfDay%>" >+</button>
              </div>
            </form>
            </div>
